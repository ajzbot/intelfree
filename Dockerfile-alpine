# 使用Alpine Linux作为基础镜像
FROM alpine:latest

# 设置标签
LABEL maintainer="your-email@example.com"

# 执行更新和安装所需软件包
RUN apk update && \
    apk add --no-cache x11vnc xvfb supervisor wget xauth && \
    mkdir -p /usr/share/novnc && \
    wget -qO- https://github.com/novnc/noVNC/archive/refs/tags/v1.2.0.tar.gz | tar xz --strip 1 -C /usr/share/novnc && \
    mkdir -p /usr/share/novnc/utils/websockify && \
    wget -qO- https://github.com/novnc/websockify/archive/master.tar.gz | tar xz --strip 1 -C /usr/share/novnc/utils/websockify && \
    chmod +x /usr/share/novnc/utils/*.sh

# 安装X11的必要组件
RUN apk add --no-cache xorg-server xterm

# 设置X11环境变量
ENV DISPLAY=:0

# 创建普通用户
RUN adduser -D user
USER user

# 设置工作目录
WORKDIR /home/user

# 创建supervisord.conf配置文件
RUN cat <<EOT >> /etc/supervisord.conf
[supervisord]
nodaemon=true

[program:xvfb]
command=Xvfb :0 -screen 0 1024x768x24

[program:x11vnc]
command=x11vnc -display :0 -forever -passwd 1128 -shared

[program:websockify]
command=/usr/share/novnc/utils/launch.sh --vnc localhost:5900
EOT

# 启动supervisor以同时运行x11vnc和websockify
CMD ["supervisord", "-c", "/etc/supervisord.conf"]
